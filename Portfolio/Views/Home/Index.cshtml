@section Scripts{
    <script>

        $(document).ready(function () {
            $('#progress-bar-skill').hide();
            $('#listing-skill').show();

            $('#toggle-skkil-style').change(function () {
                if ($(this).prop('checked')) {
                    $('#progress-bar-skill').fadeIn(700); 
                    $('#listing-skill').hide(); 
                } else {
                    $('#listing-skill').fadeIn(700);
                    $('#progress-bar-skill').hide();
                }
            });
        });

    </script>
}